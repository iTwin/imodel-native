(
INPUT_BYVALUE (double, x, "x length"),
INPUT_BYVALUE (double, y, "y length")3DONLY(,
INPUT_BYVALUE (double, z, "z length"))
)
    {
    return Math::Sqrt (x * x + y * y 3DONLY (+ z * z));
