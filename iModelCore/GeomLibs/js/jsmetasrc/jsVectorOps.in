[Description("Try to scale to specified length.")]
INSTANCEMETHOD (public, bool, TryScaleToLengthInPlace)
(
INPUT_BYVALUE(double, length, "desired length")
)
    {
    if (this.TryNormalizeInPlace ())
        {
        this.ScaleInPlace (length);
        return true;
        }
    return false;
    }



