%include mdl.mki

baseDir             = $(_MakeFilePath)

%if $(TARGET_PLATFORM)!="Android"
    %error This makefile should be used only when TARGET_PLATFORM is Android
%endif

%ifndef LogFilesDir
    %error Define LogFilesDir as the directory that contaings the logfiles to analyze
%endif

breakOnFailure = 1

#Allowed to ignore failures
%if defined(AllowIgnore)
    breakOnFailure = 0
%endif

always:
    python $(baseDIr)CheckLogFilesForFailures.py $(LogFilesDir) 1
    
