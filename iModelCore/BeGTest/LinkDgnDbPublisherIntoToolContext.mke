PolicyFile = ${SrcBsiCommon}/sharedmki/AssertCommonCompileLinkPolicy.mki
%include mdl.mki

%warn Needs work: BentleyBuild itself should set up a ToolContext with needed toolchain programs

always:
    !~@mkdir $(OutputRootDir)ToolContext

$(OutputRootDir)ToolContext/DgnDbPublisher.bat : $(OutputRootDir)Product/DgnV8Converter/DgnV8Converter.exe $(_MakeFileSpec)
    $(msg)
    >$@
    $(OutputRootDir)Product/DgnV8Converter/DgnV8Converter.exe %*
    <
    ~time  
