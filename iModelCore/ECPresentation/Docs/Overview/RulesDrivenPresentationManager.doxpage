@code{.xml}
<PresentationRuleSet>
    <ContentRule>
        <SelectedNodeInstances>
            <RelatedProperties RelationshipSchemaName="DgnContentRelationshipSchema" RelationshipClassNames="OnSameElement" RequiredDirection="Forward" />
        </SelectedNodeInstances>
