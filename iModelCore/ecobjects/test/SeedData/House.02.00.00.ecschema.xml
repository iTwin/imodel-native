<?xml version="1.0" encoding="utf-8"?>
<ECSchema schemaName="House" description="A house schema" alias="hs" version="02.00.00" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.1">
    <ECSchemaReference name="EditorCustomAttributes" version="01.00" alias="bsca" />
    <ECCustomAttributes>
        <ExtendedInfo xmlns="House.02.00.00">
            <Purpose>A whole House</Purpose>
        </ExtendedInfo>
    </ECCustomAttributes>
    <ECStructClass typeName="Item" description="An Item" >
        <ECProperty propertyName="Description" typeName="string" description="Description of an item" >
            <ECCustomAttributes>
                <Localizable xmlns="EditorCustomAttributes.01.00" />
            </ECCustomAttributes>
        </ECProperty>
        <ECProperty propertyName="DisplayName" typeName="string" displayLabel="Display Name" description="Display label for an item" >
            <ECCustomAttributes>
                <Localizable xmlns="EditorCustomAttributes.01.00" />
            </ECCustomAttributes>
        </ECProperty>
        <ECProperty propertyName="Index" typeName="int" />
    </ECStructClass>
    <ECEntityClass typeName="Content">
        <ECArrayProperty propertyName="Items" typeName="Item" minOccurs="1" maxOccurs="unbounded" isStruct="True" />
    </ECEntityClass>
    <ECCustomAttributeClass typeName="ExtendedInfo" displayLabel="Extended Information">
        <ECProperty propertyName="Purpose" typeName="string">
            <ECCustomAttributes>
                <Localizable xmlns="EditorCustomAttributes.01.00" />
            </ECCustomAttributes>
        </ECProperty>
        <ECStructArrayProperty propertyName="ContentInfo" typeName="Item" minOccurs="1" maxOccurs="unbounded" isStruct="True" />
    </ECCustomAttributeClass>
    <ECEntityClass typeName="Door" displayLabel="This is a door">
        <ECCustomAttributes>
            <ExtendedInfo xmlns="House.02.00">
                <Purpose>To enter and leave house</Purpose>
                <ContentInfo>
                    <Item>
                        <Description>Should have wood</Description>
                        <DisplayName>wood</DisplayName>
                        <Index>0</Index>
                    </Item>
                    <Item>
                        <Description>Should be painted brown</Description>
                        <DisplayName>brown</DisplayName>
                        <Index>1</Index>
                    </Item>
                </ContentInfo>
            </ExtendedInfo>
        </ECCustomAttributes>
        <ECProperty propertyName="Length" typeName="LengthType">
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>Length of door</Purpose>
                </ExtendedInfo>
            </ECCustomAttributes>
        </ECProperty>
        <ECProperty propertyName="Width" typeName="string">
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>Width of door</Purpose>
                </ExtendedInfo>
            </ECCustomAttributes>
        </ECProperty>
        <ECProperty propertyName="Height" typeName="string">
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>Height of door</Purpose>
                    <ContentInfo>
                        <Item>
                            <DisplayName>Door Item 1</DisplayName>
                            <Description>Door has item 1</Description>
                            <Index>0</Index>
                        </Item>
                        <Item>
                            <Description>Door has item 2</Description>
                            <DisplayName>Door Item 2</DisplayName>
                            <Index>1</Index>
                        </Item>
                    </ContentInfo>
                </ExtendedInfo>
            </ECCustomAttributes>
        </ECProperty>
        <ECProperty propertyName="Thickness" typeName="string">
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>Thickness of door</Purpose>
                </ExtendedInfo>
            </ECCustomAttributes>
        </ECProperty>
    </ECEntityClass>
    <ECEntityClass typeName="Room" displayLabel="This is a room">
        <ECProperty propertyName="Length" typeName="string" />
        <ECProperty propertyName="Width" typeName="string" />
    </ECEntityClass>
    <ECRelationshipClass typeName="RoomHasDoor" isDomainClass="True" strength="referencing" strengthDirection="forward" modifier="abstract">
        <Source multiplicity="(0..1)" polymorphic="True" roleLabel="Door to room" >
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>This is a room</Purpose>
                </ExtendedInfo>
            </ECCustomAttributes>
            <Class class="Room" />
        </Source>
        <Target multiplicity="(0..1)" polymorphic="True" roleLabel="Door for room" >
            <ECCustomAttributes>
                <ExtendedInfo xmlns="House.02.00">
                    <Purpose>This is a door</Purpose>
                </ExtendedInfo>
            </ECCustomAttributes>
            <Class class="Door" />
        </Target>
    </ECRelationshipClass>
    <ECEntityClass typeName="Window"/>
    <ECRelationshipClass typeName="RoomHasWindow" isDomainClass="True" strength="referencing" strengthDirection="forward" modifier="abstract">
        <Source multiplicity="(0..1)" polymorphic="True" roleLabel="Window to room" >
            <Class class="Room" />
        </Source>
        <Target multiplicity="(0..1)" polymorphic="True" roleLabel="Window for Room" >
            <Class class="Window" />
        </Target>
    </ECRelationshipClass>
    <ECEnumeration typeName="LengthType" backingTypeName="string" isStrict="true" description="Enum of length types">
        <ECEnumerator value="0" displayLabel="None" />
        <ECEnumerator value="1" displayLabel="Constant" />
        <ECEnumerator value="2" displayLabel="Tapered" />
    </ECEnumeration>
    <KindOfQuantity typeName="LengthKind" description="Kind of a Description here" persistenceUnit="CM(real)" relativeError="10e-3"
        presentationUnits="FT(DefaultReal);IN(real);MILLIINCH(real4)"/>
</ECSchema>