                                $(ecobjectsPublicAPISrc)ECSchema.h \
                                $(ecobjectsPublicAPISrc)ECSchemaConverter.h \
                                $(ecobjectsPublicAPISrc)ECValue.h \
                                $(ecobjectsPublicAPISrc)ECInstance.h \
