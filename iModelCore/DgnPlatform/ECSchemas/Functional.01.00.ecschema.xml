<?xml version="1.0" encoding="UTF-8"?>
<ECSchema schemaName="Functional" nameSpacePrefix="func" version="01.00" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.0">

    <ECSchemaReference name="BisCore" version="01.00" prefix="bis"/>
    <ECSchemaReference name="ECDbMap" version="01.00" prefix="ecdbmap"/>

    <ECEntityClass typeName="FunctionalModel">
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00"/>
        </ECCustomAttributes>
        <BaseClass>bis:Model</BaseClass>
    </ECEntityClass>

    <ECEntityClass typeName="FunctionalElement" modifier="Abstract">
        <BaseClass>bis:RoleElement</BaseClass>
        <ECCustomAttributes>
            <ClassMap xmlns="ECDbMap.01.00">
                <MapStrategy>
                    <Options>SharedColumnsForSubclasses</Options>
                    <MinimumSharedColumnCount>16</MinimumSharedColumnCount>
                </MapStrategy>
            </ClassMap>
        </ECCustomAttributes>
    </ECEntityClass>

    <ECEntityClass typeName="FunctionalBreakdownElement" modifier="Abstract">
        <BaseClass>FunctionalElement</BaseClass>
    </ECEntityClass>

    <ECEntityClass typeName="FunctionalComponentElement" modifier="Abstract">
        <BaseClass>FunctionalElement</BaseClass>
    </ECEntityClass>

</ECSchema>
