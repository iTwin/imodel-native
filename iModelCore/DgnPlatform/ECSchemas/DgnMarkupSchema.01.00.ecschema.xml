<?xml version="1.0"?>
<ECSchema schemaName="DgnMarkupSchema" nameSpacePrefix="redline" version="1.0" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.2.0">

   <ECSchemaReference name="Bentley_Standard_CustomAttributes" version="01.12" prefix="bsca" />

    <ECCustomAttributes>
        <SystemSchema xmlns="Bentley_Standard_CustomAttributes.01.12"/>
    </ECCustomAttributes>

    <!-- The Bentley Redline class. -->

    <ECClass typeName="Redline"
             description="Bentley Redline Class"
             displayLabel="Redline"
             isDomainClass="True">

        <ECProperty propertyName="Name" typeName="string" description="The redline name" displayLabel="Redline"  />
        <ECProperty propertyName="Description" decription="The redline description" typeName="string"  displayLabel="Description"  />
        <ECProperty propertyName="Creator" description="The username of the redline creator" typeName="string"  displayLabel="Creator"  />
        <ECProperty propertyName="CreateDate" description="The date when the redline was created" typeName="dateTime"  displayLabel="Date Created" />
        <ECProperty propertyName="AssignedTo" description="The name of the person the redline was assigned to" typeName="string"  displayLabel="Assigned To" />
        <ECProperty propertyName="ApprovedBy" description="The name of the person that approved the redline" typeName="string"  displayLabel="Approved By" />
        <ECProperty propertyName="Status" description="The status of the redline" typeName="string"  displayLabel="Status"  />
        <ECProperty propertyName="Priority" description="The priority of the redline" typeName="string"  displayLabel="Priority"  />
        <ECProperty propertyName="Template" typeName="string" description="Name of the template applied to the redline" />
        <ECProperty propertyName="DueDate" typeName="dateTime" displayLabel="Due Date" description="The due date for the engineering changes described by this redline"  />
        <ECProperty propertyName="ReviewedBy" description="The name of the person that reviewed the redline" typeName="string"  displayLabel="Reviewed By"  />
        <ECProperty propertyName="User1" typeName="string" displayLabel="User 1" description="General user-defined redline property #1"  />
        <ECProperty propertyName="User2" typeName="string" displayLabel="User 2" description="General user-defined redline property #2"  />
        <ECProperty propertyName="User3" typeName="string" displayLabel="User 3" description="General user-defined redline property #3"  />
        <ECProperty propertyName="User4" typeName="string" displayLabel="User 4" description="General user-defined redline property #4"  />

    </ECClass>

    <ECClass typeName="AuditComment" description="Information about changes made to a redline" displayLabel="Audit Comment" isDomainClass="True">
        <ECProperty propertyName="Comment" typeName="string" description="The change that was made" />
        <ECProperty propertyName="Date" typeName="dateTime" description="When the change was made" />
        <ECProperty propertyName="Reviewer" typeName="string" description="Who made the change" />
    </ECClass>

</ECSchema>