<?xml version="1.0" encoding="UTF-8"?>
<ECSchema schemaName="Markup" nameSpacePrefix="markup" version="01.00" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.0">

    <ECSchemaReference name="BisCore" version="01.00" prefix="bis"/>

    <ECEntityClass typeName="MarkupExternalLink">
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00" />
        </ECCustomAttributes>
        <BaseClass>bis:LinkElement</BaseClass>
        <ECProperty propertyName="LinkedElementId" typeName="long">
          <ECCustomAttributes>
            <CustomHandledProperty/>
          </ECCustomAttributes>
        </ECProperty>
    </ECEntityClass>

    <ECEntityClass typeName="MarkupExternalLinkGroup">
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00" />
        </ECCustomAttributes>
        <BaseClass>bis:LinkElement</BaseClass>
    </ECEntityClass>

    <ECRelationshipClass typeName="RedlineModelBreaksDownRedline" strength="embedding" strengthDirection="Backward">
        <BaseClass>bis:ModelModelsElement</BaseClass>
        <Source cardinality="(0,1)" polymorphic="true">
            <Class class="RedlineModel"/>
        </Source>
        <Target cardinality="(1,1)" polymorphic="true">
            <Class class="Redline" />
        </Target>
    </ECRelationshipClass>

    <ECEntityClass typeName="Redline">
        <BaseClass>bis:Document</BaseClass>
        <BaseClass>bis:IModellableElement</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Height" displayLabel="Height in pixels" typeName="int"/> <!-- really, uint16_t -->
        <ECProperty propertyName="Width" displayLabel="Width in pixels" typeName="int"/> <!-- really, uint16_t -->
    </ECEntityClass>

    <ECEntityClass typeName="RedlineModel">
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00"/>
        </ECCustomAttributes>
        <BaseClass>bis:GraphicalModel2d</BaseClass>
    </ECEntityClass>

    <ECEntityClass typeName="SpatialRedlineModel">
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00"/>
        </ECCustomAttributes>
        <BaseClass>bis:SpatialModel</BaseClass>
    </ECEntityClass>
    
    <ECEntityClass typeName="RedlineViewDefinition">
        <BaseClass>bis:SheetViewDefinition</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.01.00"/>
        </ECCustomAttributes>
    </ECEntityClass>

</ECSchema>
