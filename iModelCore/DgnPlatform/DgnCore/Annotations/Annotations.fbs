table AnnotationTextBlock {
    majorVersion:ubyte;
    minorVersion:ubyte;
    properties:[AnnotationTextBlockSetter];
    styleId:long;
    styleOverrides:[AnnotationTextStyleSetter];
    paragraphs:[AnnotationTextBlockParagraph];

} // AnnotationTextBlock

