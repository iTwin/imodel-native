namespace BentleyG06.Dgn.FB;

//***************************************************************************************************************************************************
// AnnotationTextStyle
//***************************************************************************************************************************************************

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
enum AnnotationTextStyleProperty : int {
                                    //  TYPE    TARGET      NOTES
                                    //  ----    ------      -----
    Color = 1,                      //  integer run         int64_t representation of ElementColor
    FontId = 2,                     //  integer run         Must be a valid font ID in the project
    Height = 3,                     //  real    document    In project UORs
    LineSpacingFactor = 4,          //  real    document    Factor of height
    IsBold = 5,                     //  integer run         0 or 1 boolean
    IsItalic = 6,                   //  integer run         0 or 1 boolean
    IsUnderlined = 7,               //  integer run         0 or 1 boolean
    StackedFractionScale = 8,       //  real    run         Factor of height
    StackedFractionType = 9,        //  integer run         Must exist in the AnnotationStackedFractionType enumeration
    SubScriptOffsetFactor = 10,     //  real    run         Factor of height
    SubScriptScale = 11,            //  real    run         Factor of height
    SuperScriptOffsetFactor = 12,   //  real    run         Factor of height
    SuperScriptScale = 13,          //  real    run         Factor of height
    WidthFactor = 14                //  real    document    Factor of height

} // AnnotationTextStyleProperty

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
struct AnnotationTextStyleSetter (emitVectorTypedefs) {
    key:AnnotationTextStyleProperty;
    integerValue:long;
    realValue:double;

} // AnnotationTextStyleSetter

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
table AnnotationTextStyle {
    majorVersion:ubyte;
    minorVersion:ubyte;
    id:long;
    name:string;
    description:string;
    setters:[AnnotationTextStyleSetter];

} // AnnotationTextStyle

//***************************************************************************************************************************************************
// AnnotationTextBlock
//***************************************************************************************************************************************************

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
enum AnnotationTextBlockProperty : int {
                            //  TYPE    TARGET      NOTES
                            //  ----    ------      -----
    DocumentWidth = 1,      //  real    Document    In project UORs
    Justification = 2       //  integer Document    Must exist in the AnnotationTextBlock::HorizontalJustification enumeration

} // AnnotationTextBlockProperty

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
struct AnnotationTextBlockSetter (emitVectorTypedefs) {
    key:AnnotationTextBlockProperty;
    integerValue:long;
    realValue:double;

} // AnnotationTextBlockSetter

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
enum AnnotationTextBlockRunType : int {
    Invalid = 0,
    Text = 1,
    Fraction = 2,
    LineBreak = 3

} // AnnotationTextBlockRunType

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
enum AnnotationTextRunSubSuperScript : int {
    Neither = 0,
    SubScript = 1,
    SuperScript = 2

} // AnnotationTextRunSubSuperScript

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
table AnnotationTextBlockRun (emitVectorTypedefs) {
    type:AnnotationTextBlockRunType;
    properties:[AnnotationTextBlockSetter];
    styleId:long;
    styleOverrides:[AnnotationTextStyleSetter];

    // RUN_TYPE_Text
    text_content:string;
    
    // RUN_TYPE_Fraction
    fraction_numeratorContent:string;
    fraction_denominatorContent:string;

    // RUN_TYPE_Text -- added in 06
    text_subsuperscript:AnnotationTextRunSubSuperScript;

} // AnnotationTextBlockRun

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
//=======================================================================================
table AnnotationTextBlockParagraph (emitVectorTypedefs) {
    properties:[AnnotationTextBlockSetter];
    styleId:long;
    styleOverrides:[AnnotationTextStyleSetter];
    runs:[AnnotationTextBlockRun];

} // AnnotationTextBlockParagraph

//=======================================================================================
// @bsiclass                                                    Jeff.Marker     05/2014
