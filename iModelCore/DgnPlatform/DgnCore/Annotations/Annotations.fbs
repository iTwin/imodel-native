enum AnnotationFrameStyleProperty : int {
                                    //  TYPE    NOTES
                                    //  ----    -----
    CloudBulgeFactor = 1,           //  real    Factor of effective diameter
    CloudDiameterFactor = 2,        //  real    Factor of text height
    FillColor = 3,                  //  integer int64_t representation of ElementColor
    FillTransparency = 4,           //  real    [0.0..1.0]
    HorizontalPadding = 5,          //  real    Factor of the first character's text height
    IsFillEnabled = 6,              //  integer 0 or 1 boolean
    IsStrokeCloud = 7,              //  integer 0 or 1 boolean
    IsStrokeEnabled = 8,            //  integer 0 or 1 boolean
    StrokeColor = 9,                //  integer int64_t representation of ElementColor
    StrokeWeight = 10,              //  integer Must be a standard line weight
    Type = 11,                      //  integer Must exist in the AnnotationFrameType enumeration
    VerticalPadding = 12            //  real    Factor of the first character's text height

} // AnnotationFrameStyleProperty

