%include mdl.mki
%include corelibs.mki

baseDir         = $(_MakeFilePath)

#---------------------------------------------
#   define output directory
#---------------------------------------------
objDir          = $(mscoreObj)checkprotect/
exeDir          = $(extras)checkprotect/

#---------------------------------------------
#   Create the object directory if necessary
#---------------------------------------------
$(objDir)$(tstdir)      : $(objDir)$(tstdir)

$(exeDir)$(tstdir)      : $(exeDir)$(tstdir)

#----------------------------------------------------------------------
#    Append compiler options
#----------------------------------------------------------------------
linkObjs = $(objDir)checkprotect$(oext)

$(objDir)checkprotect$(oext) : $(baseDir)checkprotect.cpp $(mgrallc)

#----------------------------------------------------------------------
#                Build/Link Commands
#----------------------------------------------------------------------
EXE_DEST     = $(exeDir)
EXE_NAME     = checkprotect
EXE_OBJS     = $(linkObjs)
EXE_LIBS     = $(ToolsExportLib) $(mdlToolslib)
EXE_TMP_DIR  = $(objDir)
EXE_USES_CXX = 1

%include $(SrcBsiCommon)sharedmki/linktool.mki

