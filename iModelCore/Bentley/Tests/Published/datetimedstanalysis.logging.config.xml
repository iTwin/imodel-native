<?xml version="1.0" encoding="UTF-8" ?>
<!--!DOCTYPE log4j:configuration SYSTEM "log4j.dtd"-->

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="DateTimeDstAnalysisConsole" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>
    
    <appender name="DateTimeDstAnalysisFileAppender" class="org.apache.log4j.FileAppender">
        <param name="File" value="${LOCALAPPDATA}\\Bentley\\Logs\\datetimedstanalysis.log"/> 
        <param name="Append" value="false"/> 
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%m%n"/>
        </layout>
    </appender>
    
    <logger name="DateTimeDstAnalysis" additivity="false">
        <level value="all" />
        <appender-ref ref="DateTimeDstAnalysisFileAppender" />
    </logger>

    <root>                            
        <priority value="error" />
        <appender-ref ref="DateTimeDstAnalysisConsole" />
    </root>
</log4j:configuration>
