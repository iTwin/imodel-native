%include mdl.mki

AppName = BeJpeg
CCompPDBName = $(AppName)
o = $(OutBuildDir)$(AppName)/

#----------------------------------------------------------------------
#       Link API
#----------------------------------------------------------------------
always:
    ~linkdir "$(BuildContext)PublicAPI/BeJpeg=$(_MakeFilePath)PublicAPI/BeJpeg"

#----------------------------------------------------------------------
#       Create output directories
#----------------------------------------------------------------------
always:
    !~@mkdir $(o)

#----------------------------------------------------------------------
#       Build source files
#----------------------------------------------------------------------
$(o)BeJpeg$(oext) : $(_MakeFilePath)BeJpeg.cpp $(_MakeFilePath)BeJpeg.h

#----------------------------------------------------------------------
#       Lib creation
#----------------------------------------------------------------------
LIB_NAME = $(AppName)
LIB_DEST = $(o)
LIB_OBJS = $(o)BeJpeg$(oext)
LIB_CONTEXT_LOCATION = $(BuildContext)Delivery/

%include creatlib.mki
