{
  "name": "imodeljs-native-typescript-api",
  "version": "0.0.1",
  "description": "TypeScript API of imodeljs-native",
  "private": true,
  "engines": {
    "node": ">=10.11.0 <17.0"
  },
  "scripts": {
    "build": "tsc 1>&2",
    "clean": "rimraf lib",
    "copy:test-assets": "cpx \"./assets/test/**/*\" ./lib/test/assets",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "pretest": "npm run copy:test-assets",
    "test": "node ./lib/test/index.js"
  },
  "//dependencies:": [
    "NOTE: May depend only on iModel.js 'wire format' or other pure types, which are declared in @itwin/core-bentley, @itwin/core-common and @itwin/core-geometry",
    "NOTE: Tests may NOT depend on other iModel.js packages"
  ],
  "devDependencies": {
    "@itwin/build-tools": "rc",
    "@itwin/core-bentley": "rc",
    "@itwin/core-common": "rc",
    "@itwin/core-geometry": "rc",
    "@itwin/eslint-plugin": "rc",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7",
    "@types/fs-extra": "^4.0.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "10.14.1",
    "chai": "^4.3.6",
    "chai-as-promised": "^7",
    "cpx2": "^3.0.0",
    "eslint": "^7.11.0",
    "fs-extra": "^8.1.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended"
  }
}
