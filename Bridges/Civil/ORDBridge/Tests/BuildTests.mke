%include mdl.mki

%ifndef TestDir
    %error must define TestDir
%endif

baseDir = $(_MakeFilePath)

%ifdef INCLUDE_LONG_RUNNING_TESTS
    nameToDefine = INCLUDE_LONG_RUNNING_TESTS
    %include cdefapnd.mki
%endif

%ifdef SKIP_SHORT_RUNNING_TESTS
    nameToDefine = SKIP_SHORT_RUNNING_TESTS
    %include cdefapnd.mki
%endif

# Compile and Link the unit tests
BEGTEST_NAME  = $(TestDir)ORDBridge
BEGTEST_INPUT = $(baseDir)$(TestDir)/
BEGTEST_IGNORE= $(baseDir)ordbridge_ignore_list.txt
BEGTEST_OUTPUT=$(OutputRootDir)build/ORDBridge/UnitTests/
o = $(BEGTEST_OUTPUT)$(BEGTEST_NAME)/

%ifdef UsePublishedApi
    BEGTEST_API = $(BuildContext)SubParts/PublishedApi/ORDBridge/
%endif

%include $(SrcRoot)bsicommon/sharedmki/DetectAndCompileUnitTests.mki


# Deliver 
$(BuildContext)Delivery/UnitTests/Objects/$(TestDir) : ${o}
    $(LinkFirstDepToFirstTargetAsDirectory)
