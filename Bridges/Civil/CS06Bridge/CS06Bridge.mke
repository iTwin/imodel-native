#--------------------------------------------------------------------------------------
#   Macros
#--------------------------------------------------------------------------------------
appSrc                   = $(_MakeFilePath)
appPublicApi             = $(appSrc)PublicAPI/$(appName)/
MultiCompileDepends      = $(_MakeFileSpec) $(appSrc)CS06BridgeInternal.h $(appPublicApi)CS06BridgeApi.h
DgnPlatformDgnDb06LibDir = ${BuildContext}/SubParts/VersionedDgnDb06Libs/
TeleporterApiDir         = ${BuildContext}/PublicAPI/DgnDb06BimTeleporter/

always:
    !~@mkdir $(o)

#----------------------------------------------------------------------
#   Pre-compiled header
#----------------------------------------------------------------------
PchCompiland        = $(appSrc)CS06BridgeInternal.cpp
PchOutputDir        = $(o)
PchExtraOptions     = -Zm160
PchExplicitDepends  = $(MultiCompileDepends)

%if defined (winNT) && $(BUILD_TOOLSET) == "LINUX_GCC"
    # Avoid internal compiler error in GCC using windows ndk toolchain
    GCC_NO_PRE_COMPILED_HEADER = 1
%endif

CompileOptionsMki =$(SrcRoot)imodel02/Bridges/Civil/CS06Bridge/CS06Bridge.mki
%include $(CompileOptionsMki)
%include $(SharedMki)PreCompileHeader.mki

CCPchOpts = $(UsePrecompiledHeaderOptions)
CPchOpts  = $(UsePrecompiledHeaderOptions)

#--------------------------------------------------------------------------------------
#   Compile source
#--------------------------------------------------------------------------------------
%include MultiCppCompileRule.mki

$(o)iModelBridgeAffinity$(oext) : $(_MakeFilePath)iModelBridgeAffinity.cpp ${MultiCompileDepends} $(appPublicApi)CS06Bridge.h

$(o)CS06Bridge$(oext) : $(_MakeFilePath)CS06Bridge.cpp ${MultiCompileDepends} $(appPublicApi)CS06Bridge.h

$(o)MarshalHelper$(oext) : $(_MakeFilePath)MarshalHelper.cpp ${MultiCompileDepends}

$(o)ChangeDetectorFacade$(oext) : $(_MakeFilePath)ChangeDetectorFacade.cpp ${MultiCompileDepends} $(_MakeFilePath)ChangeDetectorFacade.h $(TeleporterApiDir)IChangeDetector.h $(_MakeFilePath)SourceIdentityFacade.h $(_MakeFilePath)SourceStateFacade.h $(_MakeFilePath)RecordFacade.h $(_MakeFilePath)SourceItemProxy.h

$(o)SourceIdentityFacade$(oext) : $(_MakeFilePath)SourceIdentityFacade.cpp ${MultiCompileDepends} $(_MakeFilePath)SourceIdentityFacade.h $(TeleporterApiDir)ISourceIdentity.h

$(o)SourceStateFacade$(oext) : $(_MakeFilePath)SourceStateFacade.cpp ${MultiCompileDepends} $(_MakeFilePath)SourceStateFacade.h $(TeleporterApiDir)ISourceState.h

$(o)RecordFacade$(oext) : $(_MakeFilePath)RecordFacade.cpp ${MultiCompileDepends} $(_MakeFilePath)RecordFacade.h $(TeleporterApiDir)IRecord.h $(TeleporterApiDir)ISourceIdentity.h $(TeleporterApiDir)ISourceState.h $(_MakeFilePath)SourceIdentityFacade.h $(_MakeFilePath)SourceStateFacade.h

$(o)SourceItemProxy$(oext) : $(_MakeFilePath)SourceItemProxy.cpp ${MultiCompileDepends} $(_MakeFilePath)SourceItemProxy.h $(TeleporterApiDir)ISourceItem.h

%include MultiCppCompileGo.mki

