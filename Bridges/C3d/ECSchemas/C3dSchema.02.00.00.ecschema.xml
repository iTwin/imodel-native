    </ECEntityClass>
    <ECEntityClass typeName="AeccAlignment" modifier="Sealed" displayLabel="Alignment" description="Civil3D alignment object">
        <BaseClass>AeccBase</BaseClass>
        <ECProperty propertyName="Description" typeName="string" category="C3dGeometry" displayLabel="Description" description="C3D alignment description"/>
