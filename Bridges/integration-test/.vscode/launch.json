    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Terminal (integrated)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": ["-s=\\\\builds\\prgbuilds-readonly\\AzureBuilds\\iModelBridgeService-MicroStation",
                    "--Dest=m:\\tmp\\",
                    "--BuildVer=latest",
                    "--FileName=iModelBridgeMstnx64.msi"
                    ]
        },
        
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "name": "Launch tests",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "test"
                ]
        },
        {
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "name": "Mocha tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--require", "ts-node/register",
//                "-u", "tdd",
                "--timeout", "999999",
                "--colors", "--recursive",
                "${workspaceFolder}/test/**/*.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}