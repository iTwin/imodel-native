HAVE_PERMISSION_TO_COMPILE_AT_W3=1
DLMLINK_WARNINGS_AS_ERRORS=1
%include mdl.mki

appName         = Base64
Base64Dir       = $(_MakeFilePath)

#Standard output directory used by misc mke/mki
o               = $(OutputRootDir)build/imagepp/$(appName)/

#----------------------------------------------------------------------
#       Create output directories
#----------------------------------------------------------------------
always:
    !~@mkdir $(o)

#----------------------------------------------------------------------
#       Build source files
#----------------------------------------------------------------------
$(o)base64$(oext) : $(Base64Dir)src/base64.cpp $(Base64Dir)h/base64.h

#----------------------------------------------------------------------
#       Lib creation
#----------------------------------------------------------------------
LIB_CONTEXT_LOCATION    = $(OutImagePP)PrivateLibs/
LIB_NAME                = $(appName)
LIB_DEST                = $(o)
LIB_OBJS                = $(o)base64$(oext)

%include creatlib.mki

