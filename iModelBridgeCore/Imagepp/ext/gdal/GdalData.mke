#
# Make file for CS_MAP GeoCoordinate Data that must be shipped with the GeoCoord libraries.
#
#----------------------------------------------------------------------
#----------------------------------------------------------------------
#   Define standard macros.
#----------------------------------------------------------------------
%include mdl.mki

GdalData = $(OutBuildContexts)ImagePP/Delivery/GdalData/

#----------------------------------------------------------------------
#   We link the Imagepp Gdal data subdirectories to our output directory
#----------------------------------------------------------------------
gdDataDir    = $(baseDir)data/

#----------------------------------------------------------------------
#   Create output directories.
#----------------------------------------------------------------------
always:
    ~@mkdir $(GdalData)

always:
    ~linkmultiplefiles "$(GdalData)=$(gdDataDir)*.*"

