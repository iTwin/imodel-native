PolicyFile=$(SrcRoot)Pointools/PointoolsCommon/AssertPolicy.mki
%include mdl.mki

DeliveryDir=$(OutBuildContexts)PointoolsLibs_VS2012/Delivery/

VendorAPIDir = $(OutBuildContexts)PointoolsLibs_VS2012/VendorAPI/TopconCodec

always:
    @CreateSymLinks.py   -d"$(VendorAPIDir)=$(PointoolsLibs)topcon\TopconCodec"


#---------------------------------------------------------------------------------------------------------
# Libs required
#---------------------------------------------------------------------------------------------------------

%if $(TARGET_PROCESSOR_ARCHITECTURE) == "x86"
always:
    @CreateSymLinks.py   -f"$(DeliveryDir)TopconCodec.lib"=${PointoolsLibs}\topcon\TopconCodec\x86\Release\TopconCodec.lib"

always:
    @CreateSymLinks.py   -f"$(DeliveryDir)TopconCodec.dll"=${PointoolsLibs}\topcon\TopconCodec\x86\Release\TopconCodec.dll"

%endif

%if $(TARGET_PROCESSOR_ARCHITECTURE) == "x64"
always:
    @CreateSymLinks.py   -f"$(DeliveryDir)TopconCodec.lib"=${PointoolsLibs}\topcon\TopconCodec\x64\Release\TopconCodec.lib"

always:
    @CreateSymLinks.py   -f"$(DeliveryDir)TopconCodec.dll"=${PointoolsLibs}\topcon\TopconCodec\x64\Release\TopconCodec.dll"

%endif

