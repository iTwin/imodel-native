PointoolsVortexAPI=$(SrcRoot)Pointools/PointoolsVortexAPI/
PointoolsVortexAPIInclude = $(PointoolsVortexAPI)include/
PointoolsVortexAPISrc = $(PointoolsVortexAPI)src/

