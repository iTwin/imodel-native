%include cdefapnd.mki

nameToDefine = NO_IODEFS
%include cdefapnd.mki

%ifndef DEBUG
    nameToDefine = NDEBUG
    %include cdefapnd.mki
%endif #!DEBUG

nameToDefine = NOMINMAX
%include cdefapnd.mki


#----------------------------------------------------------------------
#   Get includes file listings
#----------------------------------------------------------------------
