    </xs:complexType>

    <!-- =========================================================== -->
    <xs:complexType name="PinnedGroupType">
        <xs:annotation>
            <xs:documentation>
            Type used to contain a list of pinned document data.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="PinnedData" type="PinnedDataType" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>
                    A list of pinned data.
                    </xs:documentation>
