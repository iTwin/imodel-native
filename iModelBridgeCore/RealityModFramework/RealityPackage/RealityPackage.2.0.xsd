    <xs:complexType name="ImageryGroupType">
        <xs:annotation>
            <xs:documentation>
            Type used to contain a list of Imagery data.
            </xs:documentation>
        </xs:annotation>      
        <xs:sequence>
            <xs:element name="ImageryData" type="ImageryDataType" maxOccurs="unbounded">
                <xs:annotation>
                    <xs:documentation>
                    A list of imagery data.
                    </xs:documentation>
                </xs:annotation>            
            </xs:element>
        </xs:sequence>            
    </xs:complexType>

    <!-- =========================================================== -->
