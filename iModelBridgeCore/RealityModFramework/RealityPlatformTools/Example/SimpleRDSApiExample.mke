%include mdl.mki

appName             = SimpleRDSApiExample
baseDir             = $(_MakeFilePath)

%include $(SrcRoot)imodel02/iModelBridgeCore/RealityModFramework/mki/RealityModFrameworkCommon.mki

#----------------------------------------------------------------------
#   Create output directories
#----------------------------------------------------------------------
always:
    !~@mkdir $(o)

#----------------------------------------------------------------------
#   Build source files
#----------------------------------------------------------------------
$(o)SimpleRDSApiExample$(oext) : $(baseDir)SimpleRDSApiExample.cpp

#----------------------------------------------------------------------
#   DLL/LIB creation
#----------------------------------------------------------------------
EXE_DEST     = $(o)
EXE_NAME     = $(appName)
EXE_OBJS     = $(o)SimpleRDSApiExample$(oext)

LINKER_LIBRARIES    =  $(ContextSubpartsLibs)$(libprefix)Bentley$(libext) \
                       $(ContextSubpartsLibs)$(libprefix)BeCurl$(libext) \
                       $(ContextSubpartsLibs)$(libprefix)BeJsonCpp$(libext) \
                       $(ContextDeliveryDir)RealityPlatform.lib \
                       $(ContextDeliveryDir)RealityPlatformTools.lib 

%include $(SharedMki)linktool.mki

