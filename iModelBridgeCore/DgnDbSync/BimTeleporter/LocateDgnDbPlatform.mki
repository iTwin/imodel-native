DGNDB_VER=DgnDb06

# -----------------------------------------------------------------------------------------------------------------------
# Allow the developer to work from a live build of Dgndb, instead of LKGs
# -----------------------------------------------------------------------------------------------------------------------
%ifdef DGNCLIENT_SDK_PRODUCT
    DgnDbDgnPlatformBase = $(DGNCLIENT_SDK_PRODUCT)
    %ifnofile ${DgnDbDgnPlatformBase}
        %error $(DgnDbDgnPlatformBase) not found. Make sure DGNCLIENT_SDK_PRODUCT points to Product\DgnClientSdk-$(TARGET_PROCESSOR_DIRECTORY) in your DgnDb output tree.
    %endif
%else
    DgnDbDgnPlatformBase = $(BuildContext)SdkSources/DgnClientSdk-Minimal-$(TARGET_PROCESSOR_DIRECTORY)-DgnDb/
%endif

DgndbDgnPlatformLibDir = $(DgnDbDgnPlatformBase)lib/$(TARGET_PROCESSOR_DIRECTORY)/
DgndbDgnPlatformIncludeDir = $(DgnDbDgnPlatformBase)include/
