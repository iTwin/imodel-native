<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bentley.ImageViewer" x:Class="Bentley.ImageViewer.WatchWindow" 
             mc:Ignorable="d" Width="auto" Height="auto" IsVisibleChanged="UserControl_IsVisibleChanged">
    <Grid HorizontalAlignment="Stretch" Width="auto">
        <ScrollViewer HorizontalAlignment="Stretch" Width="auto">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Width="auto">
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Stretch" Width="auto">
                    <Label Content="Watch: "/>
                    <TextBox Height="22" TextWrapping="Wrap" Name="Expression" Text="Expression to watch" HorizontalAlignment="Right" Width="341" KeyDown="Expression_KeyDown"/>
                </StackPanel>
                <StackPanel  Name="WatchBoxPanel" Orientation="Vertical" HorizontalAlignment="Stretch" Width="auto">
                    
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
