<ECSchema schemaName="ClassificationSystems" alias="clsf" version="01.00" xmlns="http://www.bentley.com/schemas/Bentley.ECXML.3.1">
    <ECSchemaReference name="BisCore" version="01.00" alias="bis" />

    <ECEntityClass typeName="ClassificationSystem" displayLabel="ClassificationSystem">
        <BaseClass>bis:DefinitionElement</BaseClass>
        <BaseClass>bis:ISubModeledElement</BaseClass>
        <ECCustomAttributes>
          <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
    </ECEntityClass>
  
    <ECEntityClass typeName="Classification" modifier="Abstract" displayLabel="ClassificationSystem ClassDefinition" description="The ClassDefinition used to store classificationSystem data.">
        <BaseClass>bis:DefinitionElement</BaseClass>
        <ECNavigationProperty propertyName="Group" relationshipName="ClassificationIsInClassificationGroup" direction="Forward" description="Group this definition belong to" />
        <ECNavigationProperty propertyName="Specialization" relationshipName="ClassificationSpecializesClassification" direction="Forward" description="Classification this Specializes in" />
    </ECEntityClass>
    
    <ECEntityClass typeName="ClassificationGroup" displayLabel="ClassificationSystem ClassDefinition group" description="The ClassDefinition group element">
        <BaseClass>bis:GroupInformationElement</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
    </ECEntityClass>
        
    <ECRelationshipClass typeName="ClassificationIsInClassificationGroup" modifier="None" strength="referencing" description="a relationship to map Classification to its' group">
        <Source multiplicity="(0..*)" roleLabel="is grouped in" polymorphic="true">
            <Class class="Classification"/>
        </Source>
        <Target multiplicity="(1..1)" roleLabel="groups" polymorphic="true">
            <Class class="ClassificationGroup"/>
        </Target>
    </ECRelationshipClass>

    <ECRelationshipClass typeName="ClassificationSpecializesClassification" modifier="None" strength="referencing" description="a relationship">
        <Source multiplicity="(0..*)" roleLabel="Specializes" polymorphic="true">
            <Class class="Classification"/>
        </Source>
        <Target multiplicity="(1..1)" roleLabel="In" polymorphic="true">
            <Class class="Classification"/>
         </Target>
    </ECRelationshipClass>
  
    <ECEntityClass typeName="CIBSEClassDefinition" displayLabel="CIBSE ClassDefinition" description="The ClassDefinition used to store CIBSE classificationSystem data">
        <BaseClass>Classification</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
    </ECEntityClass>

    <ECEntityClass typeName="ASHRAEClassDefinition" displayLabel="ASHRAE ClassDefinition" modifier="Abstract" description="The ClassDefinition used to store ASHRAE classificationSystem type data">
        <BaseClass>Classification</BaseClass>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
    </ECEntityClass>

    <ECEntityClass typeName="ASHRAE2004ClassDefinition" displayLabel="ASHRAE2004 ClassDefinition" description="The ClassDefinition used to store ASHRAE2004 classificationSystem data">
        <BaseClass>ASHRAEClassDefinition</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
    </ECEntityClass>
    
    <ECEntityClass typeName="ASHRAE2010ClassDefinition" displayLabel="ASHRAE2010 ClassDefinition" description="The ClassDefinition used to store ASHRAE2010 classificationSystem data">
        <BaseClass>ASHRAEClassDefinition</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
    </ECEntityClass>
    
    <ECEntityClass typeName="OmniClassClassDefinition" displayLabel="OmniClass ClassDefinition" description="The ClassDefinition used to store OmniClass classificationSystem data">
        <BaseClass>Classification</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
        <ECProperty propertyName="Description" typeName="string" displayLabel="Description"/>
        <ECProperty propertyName="OmniClassID" typeName="string" displayLabel="OmniClassID"/>
    </ECEntityClass>
    
    <ECEntityClass typeName="MasterFormatClassDefinition" displayLabel="MasterFormat ClassDefinition" description="The ClassDefinition used to store MasterFormat classificationSystem data">
        <BaseClass>Classification</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
        <ECProperty propertyName="Description" typeName="string" displayLabel="Description"/>
    </ECEntityClass>
    
    <ECEntityClass typeName="UniFormatClassDefinition" displayLabel="UniFormat ClassDefinition" description="The ClassDefinition used to store UniFormat classificationSystem data">
        <BaseClass>Classification</BaseClass>
        <ECCustomAttributes>
            <ClassHasHandler xmlns="BisCore.1.0"/>
        </ECCustomAttributes>
        <ECProperty propertyName="Name" typeName="string" displayLabel="Name"/>
        <ECProperty propertyName="Description" typeName="string" displayLabel="Description"/>
    </ECEntityClass>
    
</ECSchema>
