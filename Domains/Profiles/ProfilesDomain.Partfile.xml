<?xml version="1.0" encoding="utf-8"?>

<BuildContext xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../bsicommon/build/PartFile.xsd">

    <!-- A convenience to platform developers that want to build platform and use Gist as their testbed. -->
    <Part Name="ProfilesDomainWithGist" PrgOutputDir="DgnClientSdk" Sequential="true">
        <SubPart PartName="DgnClientSdk-Tested" PartFile="DgnClientFx" Repository="DgnClientFx"/>
        <SubPart PartName="Gist" PartFile="Gist" Repository="Gist"/>
        <SubProduct ProductName="ProfilesDomainTested"/>
    </Part>

    <Product Name="ProfilesDomainSDK">
        <SubPart PartName="ProfilesDomainDLL"/>
        <Directories DirectoryListName="ProfilesDomainSDKDirs"/>
    </Product>

    <Product Name="ProfilesDomainTested">
        <SubProduct ProductName="ProfilesDomainSDK"/>
        <SubPart PartName="RunProfilesDomainTests"/>
        <Directories DirectoryListName="ProfilesDomainSDKDirs"/>
        <Directories DirectoryListName="ProfilesDomainTestDirs"/>
    </Product>

    <Part Name="ProfilesDomainPublicAPI" BentleyBuildMakeFile="Profiles.prewire.mke" ApiNumber="B02">
        <Bindings>
            <PublicAPI Domain="ProfilesDomain"/>
            <Files ProductDirectoryName="Assets" ProductSubDirectory="ECSchemas/Domain" SubPartDirectory="ECSchemas/Domain">
                ECSchemas/Domain/Profiles.ecschema.xml
            </Files>
            <Directory SourceName="PublicAPI/ProfilesDomain" ProductDirectoryName="ProfilesDomainIncludes" />
        </Bindings>
    </Part>

    <Part Name="ProfilesDomainDLL" BentleyBuildMakeFile="Profiles.mke" ApiNumber="B02">
        <SubPart PartName="DgnPlatformDLL"  PartFile="DgnPlatform" Repository="DgnPlatform" />
        <SubPart PartName="ProfilesDomainPublicAPI"/>
        <Bindings>
            <Libs>
                Delivery/$(libprefix)ProfilesDomain$(libext)
            </Libs>
            <Assemblies>
                Delivery/$(shlibprefix)ProfilesDomain$(ApiNumber)$(shlibext)
            </Assemblies>
            <!-- <Files ProductDirectoryName="Libs" >
                Delivery/$(libprefix)StructuralDomain$(libext)
                Delivery/$(shlibprefix)StructuralDomain$(ApiNumber)$(shlibext)
            </Files> -->
        </Bindings>
    </Part>
    
    <Part Name="ProfilesDomainTestsExe" DeferType="ProfilesDomainTests" BentleyBuildMakeFile="Tests/Tests.mke">
        <SubPart PartName="google_gtest_lib"     PartFile="gtest"         Repository="util-gtest"  />
        <SubPart PartName="DgnView"              PartFile="DgnDisplay"    Repository="DgnDisplay"  />
        <SubPart PartName="DgnPlatformSqlang"    PartFile="DgnPlatform"   Repository="DgnPlatform" />
        <SubPart PartName="ProfilesDomainDLL"/>
        <Bindings>
            <Assemblies>Delivery/$(shlibprefix)ProfilesDomainTests.exe</Assemblies>
            <Files ProductDirectoryName="ProfilesDomainRoot">
                Delivery/ProfilesDomainTests.logging.config.xml
                Delivery/ignore_list.txt
            </Files>
            <Files ProductDirectoryName="Assets" ProductSubDirectory="sqlang">
                Delivery/ProfilesDomainTests_en-US.sqlang.db3
            </Files>
        </Bindings>
    </Part>

    <Part Name="RunProfilesDomainTests" DeferType="RunUnitTests" BentleyBuildMakeFile="$(BuildContext)/SubParts/BeGTest/gtest/RunGtest.mke" 
          BentleyBuildMakeOptions="-dGTEST_PRODUCT=ProfilesDomainTested\  -dGTEST_NAME=ProfilesDomainTests" ExcludeLibType="Static">
        <SubPart PartName="ProfilesDomainTestsExe"/>
        <Bindings>
            <Files Required="false" SubPartDirectory="Gtest/Logs">
                Delivery/Gtest/Logs/ProfilesDomainTests.log
            </Files>
        </Bindings>
    </Part>

    <ProductDirectoryList ListName="ProfilesDomainTestDirs">
        <ProductDirectory Name="VendorNotices"                  Deliver="false" />
        <ProductDirectory Name="Libs"                           Deliver="false" />
        <ProductDirectory Name="ProfilesDomainIncludes"         Deliver="false" />
        <ProductDirectory Name="UnitTests-Assets"               Deliver="false" />
        <ProductDirectory Name="UnitTests-IgnoreList"           Deliver="false" />
        <ProductDirectory Name="UnitTests-Objects"              Deliver="false" />
    </ProductDirectoryList>

    <ProductDirectoryList ListName="ProfilesDomainSDKDirs">
        <ProductDirectory Name="ProfilesDomainRoot"              Path=""/>
        <ProductDirectory Name="Assemblies"                      RelativeTo="ProfilesDomainRoot" Path=""/>
        <ProductDirectory Name="Assemblies"                      LibType="static" Deliver="false"/>
        <ProductDirectory Name="Libs"                            RelativeTo="ProfilesDomainRoot" Path=""/>
        <ProductDirectory Name="Assets"                          RelativeTo="ProfilesDomainRoot" Path="Assets"/>
        <ProductDirectory Name="Assets"                          LibType="static" Deliver="false" />
        <ProductDirectory Name="ProfilesDomainIncludes"          RelativeTo="ProfilesDomainRoot" Path="Include/ProfilesDomain"/>
        <ProductDirectory Name="VendorNotices"                   RelativeTo="ProfilesDomainRoot" Path="VendorNotices"/>
        <ProductDirectory Name="VendorNotices"                   LibType="static" RelativeTo="ProfilesDomainRoot" Path="VendorNotices"/>
    </ProductDirectoryList>

</BuildContext>
